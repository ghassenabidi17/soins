{% extends 'base.html.twig' %}

{% block title %}Abonnement index{% endblock %}

{% block body %}
    <h1>Abonnement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdAb</th>
                <th>Nomprenom</th>
                <th>Type</th>
                <th>Age</th>
                <th>Nbplace</th>
                <th>IdKine</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td>{{ abonnement.idAb }}</td>
                <td>{{ abonnement.nomprenom }}</td>
                <td>{{ abonnement.type }}</td>
                <td>{{ abonnement.age }}</td>
                <td>{{ abonnement.nbplace }}</td>
                <td>{{ abonnement.idKine }}</td>
                <td>
                    <a href="{{ path('app_abonnement_show', {'idAb': abonnement.idAb}) }}">show</a>
                    <a href="{{ path('app_abonnement_edit', {'idAb': abonnement.idAb}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_abonnement_new') }}">Create new</a>
{% endblock %}
